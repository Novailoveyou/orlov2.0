generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Player {
  /// The unique identifier for the record
  /// @default {Generated by database}
  id String @id @unique @default(uuid())

  /// createdAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  createdAt DateTime @default(now()) @map(name: "created_at")

  /// updatedAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  updatedAt DateTime @default(now()) @updatedAt @map(name: "updated_at")

  /// username
  /// @zod.trim().min(3, { message: "Имя должно быть более 3-ех символов" }).max(36, { message: "Имя не должно привышать 36-и символов" })
  username String @unique

  /// score
  score Int @default(0)

  @@map("players")
}

model QNA {
  /// The unique identifier for the record
  /// @default {Generated by database}
  id String @id @unique @default(uuid())

  /// createdAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  createdAt DateTime @default(now()) @map(name: "created_at")

  /// updatedAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  updatedAt DateTime @default(now()) @updatedAt @map(name: "updated_at")

  /// question
  /// @zod.trim().min(3, { message: "Вопрос должен быть более 3-ех символов" }).max(36, { message: "Вопрос не должен привышать 36-и символов" })
  question String @unique

  /// question
  /// @zod.trim().min(1, { message: "Ответ должен быть более 1-го символа" }).max(24, { message: "Ответ не должен привышать 24-ех символов" })
  answer String

  /// answer variants
  answerVariants String[]

  @@map("qnas")
}

