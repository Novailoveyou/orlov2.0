generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model App {
  /// The unique identifier for the record
  /// @default {Generated by database}
  id String @id @unique @default(uuid())

  /// createdAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  createdAt DateTime @default(now()) @map(name: "created_at")

  /// updatedAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  updatedAt DateTime @default(now()) @updatedAt @map(name: "updated_at")

  /// app name
  /// @zod.trim().min(1, { message: "dialogLeadForm.app.name.minLength" }).max(255, { message: "dialogLeadForm.app.name.maxLength" })
  name String

  /// app url
  /// @zod.trim().min(1, { message: "dialogLeadForm.app.url.minLength" }).max(2048, { message: "dialogLeadForm.app.url.maxLength" }).url({ message: "dialogLeadForm.app.url.url" })
  url String

  @@map("apps")
}

model Error {
  /// The unique identifier for the record
  /// @default {Generated by database}
  id String @id @unique @default(uuid())

  /// createdAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  createdAt DateTime @default(now()) @map(name: "created_at")

  /// updatedAt lead date at the request time
  /// @zod.custom(z.coerce.date())
  updatedAt DateTime @default(now()) @updatedAt @map(name: "updated_at")

  /// user url from which the request came
  /// @zod.trim().min(1, { message: "dialogLeadForm.errors.message.minLength" }).max(10000, { message: "dialogLeadForm.errors.message.maxLength" })
  message String

  /// user url from which the request came
  /// @zod.trim().min(0, { message: "dialogLeadForm.errors.additionalInfo.minLength" }).max(536870888, { message: "dialogLeadForm.errors.additionalInfo.maxLength" })
  additionalInfo String?

  @@map("errors")
}
